
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="@drawable/language_selection_background">
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_margin="20dp"
    android:padding="10dp"
        >
   <Button
           android:id="@+id/kk_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/kk_button_background"
           android:layout_gravity="center_horizontal"
           android:layout_marginBottom="20dp"
           ></Button>

    <Button
            android:id="@+id/ru_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ru_button_background"
            android:layout_gravity="center_horizontal"
            android:layout_y="@dimen/activity_vertical_margin"
            android:layout_alignLeft="@+id/kk_button"
            ></Button>

</LinearLayout>


</LinearLayout>
